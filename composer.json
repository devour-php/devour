{
    "name": "devour-php/devour",
    "type": "library",
    "description": "Devour is a PHP library for importing data.",

    "require": {
        "aura/sqlschema": "~2.0",
        "guzzlehttp/psr7": "~1.0",
        "php": ">=5.5",
        "psr/log": "~1.0",
        "psr/http-message": "~1.0",
        "symfony/finder": "~2.0",
        "symfony/process": "~2.0"
    },

    "require-dev": {
        "phpunit/phpunit": "~4.0"
    },

    "suggest": {
        "symfony/console": "Install the Symfony console component to use the command line interface."
    },

    "autoload": {
        "psr-4": {
            "Devour\\": "src/",
            "Devour\\Tests\\": "tests/"
        }
    }
}
